{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "vscode-jest-tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/services/default",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/services/default/node_modules/.bin/jest", "--runInBand", "--rootDir=${workspaceRoot}/services/default/src/server"],
            "console": "integratedTerminal",
            "port": 9229,
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/services/default/src/server/server.ts",
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/services/default/dist/server/*.js"
            ]
        },
    ]
}